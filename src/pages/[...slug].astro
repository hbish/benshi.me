---
import Container from '../layouts/Container.astro';
import WebmentionCount from '../components/WebmentionCount.astro';
import WebmentionFeed from '../components/WebmentionFeed.astro';
import CommentCTA from '../components/CommentCTA.astro';
import { type CollectionEntry, getCollection } from 'astro:content';
import { SITE_TITLE } from '../consts';
import { extractFirstImage } from '../utils/extractFirstImage';
import { Calendar, Clock, Tag } from '@lucide/astro';

export async function getStaticPaths() {
    const posts = await getCollection('posts');
    const notes = await getCollection('notes');

    const postPaths = posts.map((post) => ({
        params: { slug: post.slug },
        props: { content: post, type: 'post' }
    }));

    const notePaths = notes.map((note) => ({
        params: { slug: `notes/${note.slug}` },
        props: { content: note, type: 'note' }
    }));

    return [...postPaths, ...notePaths];
}

type Props = {
    content: CollectionEntry<'posts'> | CollectionEntry<'notes'>;
    type: 'post' | 'note';
};

const { content, type } = Astro.props;
const { Content, remarkPluginFrontmatter } = await content.render();

// Get the raw content for image extraction
const rawContent = content.body;

// Resolve social media image with priority:
// 1. socialImage field (explicit override)
// 2. image field (general image)
// 3. First image in content
// 4. Default OG image
const contentData = content.data as Record<string, unknown>;
let socialImage = (contentData.socialImage as string) || (contentData.image as string);
if (!socialImage) {
    const extractedImage = extractFirstImage(rawContent);
    if (extractedImage) {
        socialImage = extractedImage;
    }
}

// Generate description if not provided (first 160 chars of content)
let description = content.data.description;
if (!description && rawContent) {
    // Strip markdown and get first 160 chars
    const plainText = rawContent.replace(/[#*`[\]()]/g, '').replace(/\n/g, ' ').trim();
    description = plainText.substring(0, 160) + (plainText.length > 160 ? '...' : '');
}

// Format date for display
const formatDate = (date: Date) => {
    return date.toLocaleDateString('en-US', {
        year: 'numeric',
        month: 'long',
        day: 'numeric'
    });
};

// Format date for machine reading (ISO format)
const formatISODate = (date: Date) => {
    return date.toISOString();
};

// Current page URL for schema markup
const pathname = Astro.url.pathname.endsWith('/') ? Astro.url.pathname : Astro.url.pathname + '/';
const currentUrl = new URL(pathname, Astro.site);
---

<Container
    title={content.data.title}
    description={description}
    image={socialImage}
    type={type === 'post' ? 'article' : 'website'}
    url={currentUrl.toString()}
    date={content.data.date}
    author={content.data.author}
    tags={content.data.tags}
>
    <div class="content px-4 sm:px-0">
        <section>
            <div class="section-title uppercase tracking-wide text-theme-muted mb-2 text-center">
                {type === 'post' ? 'Blog Post' : 'Note'}
            </div>

            <article class="h-entry">
            <!-- Article Header -->
            <header class="mb-8 pb-6 header-divider">
                <h1 class="p-name text-3xl lg:text-4xl font-bold leading-tight mb-4 text-theme text-center">
                    {content.data.title}
                </h1>

                <!-- Article Metadata -->
                <div class="flex flex-wrap items-center justify-center text-sm text-theme-muted space-x-4 mb-4">
                    <div class="flex items-center">
                        <Calendar class="w-4 h-4 mr-2" />
                        <time class="dt-published" datetime={formatISODate(content.data.date)}>
                            {formatDate(content.data.date)}
                        </time>
                    </div>

                    {remarkPluginFrontmatter?.minutesRead && (
                        <div class="flex items-center">
                            <Clock class="w-4 h-4 mr-2" />
                            <span>{remarkPluginFrontmatter.minutesRead}</span>
                        </div>
                    )}

                    {type === 'post' && (
                        <WebmentionCount target={currentUrl.toString()} />
                    )}
                </div>

                {content.data.tags && content.data.tags.length > 0 && (
                    <div class="flex items-center flex-wrap gap-2 justify-center">
                        <Tag class="w-4 h-4 text-theme-muted" />
                        {content.data.tags.map((tag: string) => (
                            <a
                                href={`/tags/${tag}/`}
                                class="inline-block px-2 py-1 text-xs font-medium text-theme-accent rounded-full hover:bg-theme-accent hover:text-[#1a1a1a] transition-all duration-200 hover:scale-105"
                            >
                                {tag}
                            </a>
                        ))}
                    </div>
                )}
            </header>

            <!-- Article Content -->
            <div class="e-content prose prose-lg dark:prose-invert max-w-[85%] md:max-w-[90%] lg:max-w-none mx-auto">
                <Content />
            </div>
        </article>

        {type === 'post' && (
            <div class="webmentions mt-12 pt-8 border-t border-theme max-w-[85%] md:max-w-[90%] lg:max-w-none mx-auto">
                <h3 class="text-xl font-semibold mb-6 text-theme">Interactions</h3>
                <CommentCTA url={currentUrl.toString()} />
                <WebmentionFeed target={currentUrl.toString()} />
            </div>
        )}
        </section>
    </div>

    <!-- JSON-LD Schema Markup -->
    <script type="application/ld+json" set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": type === 'post' ? "BlogPosting" : "Article",
        "headline": content.data.title,
        "description": content.data.description || content.data.title,
        "author": {
            "@type": "Person",
            "name": content.data.author
        },
        "datePublished": formatISODate(content.data.date),
        "dateModified": formatISODate(content.data.date),
        "url": currentUrl.toString(),
        "mainEntityOfPage": {
            "@type": "WebPage",
            "@id": currentUrl.toString()
        },
        "publisher": {
            "@type": "Organization",
            "name": SITE_TITLE,
            "url": Astro.site?.toString()
        },
        ...(remarkPluginFrontmatter?.minutesRead && {
            "timeRequired": `PT${remarkPluginFrontmatter.minutesRead.replace(/\D/g, '')}M`
        }),
        ...(content.data.tags && {
            "keywords": content.data.tags.join(', ')
        })
    })}>
    </script>

<style>
    .header-divider {
        position: relative;
    }

    .header-divider::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 1px;
        background: linear-gradient(
            to right,
            transparent 0%,
            var(--color-border) 20%,
            var(--color-border) 80%,
            transparent 100%
        );
        opacity: 0.6;
    }
</style>
</Container>
